html {
	min-width: 960px;
	max-width: 1280px;
	margin: 0 auto 0 auto;
	background: #fff;
	color: #000;
}

body {
	font-family: Verdana, sans-serif;
	font-size: 11pt;	
}

#page {
	width: 90%;
	margin: 50px auto 50px auto;
	padding: 20px;
	background: #ccc;
	border: 2px solid #888;
}

/* Header Section */

#header {
	width: 90%;
	margin: 0 auto 0 auto;
	background: #4671D5;
	border: 1px solid #06266F;
	border-radius: 10px;
	text-align: center;
}

#header h1 {
	color: #6C8CD5;
	text-shadow: 0px 0px 10px rgba(0, 0, 0, 1);
}

#header h1 a {
	color: inherit;
	text-decoration: none;
}

/* Links Section */

#links {
	margin-top: 10px;
}

#links nav {
	margin-left: auto;
	margin-right: auto;
	text-align: center;
}

#links a {
	padding: 2px 5px 2px 5px;
	margin: 0 5px 0 5px;
	text-decoration: none;
	border: 1px solid #A65F00;
	border-radius: 5px;
	background: #FFBF40;
	color: #222;
}

#links a:link {
	font-weight: bold;
}

#links a:hover {
	background: #FA0;
}

/* Body */

#body {
	margin-top: 10px;
}

/* Other Stuff */

#headshot {
	float: right;
	width: 250px;
	margin-right: 20px;
	margin-left: 20px;
	margin-bottom: 20px;
}

.center {
	margin-left: auto;
	margin-right: auto;
	text-align: center;	
}

.lfloat  { float: left; }
.rfloat  { float: right; }

hr {
	clear: both;
}

.tcenter {
	text-align:center;
}

